ResultTable

â­ Identity Area

âœ… RoleTbl
âœ… UserTbl

â­ Exam Engine

âœ… ExamTbl
âœ… QuestionTbl
âœ… OptionTbl â­ MUST

â­ Exam Flow

âœ… ExamAssignTbl
âœ… StudentAttemptTbl
âœ… StudentAnswerTbl â­ MUST


-> Table With Column :

1.RoleTbl :
	RoleId INT AUTO_INCREMENT PRIMARY KEY,
	RoleName VARCHAR(50) NOT NULL UNIQUE,
	CreatedAt DATETIME DEFAULT CURRENT_TIMESTAMP

2.UserTbl :
	UserId INT AUTO_INCREMENT PRIMARY KEY,
	// FullName VARCHAR(150),
	Fname VARCHAR(100) NOT NULL,
	Mname VARCHAR(100) ,
	Lname VARCHAR(100) NOT NULL,
	Email VARCHAR(150) NOT NULL UNIQUE,
	Username VARCHAR(50) UNIQUE,
	PasswordHash VARCHAR(255) NOT NULL,
	Phone VARCHAR(20),
	RoleId INT NOT NULL, -- Foreign Key
	IsActive BOOLEAN DEFAULT TRUE,
	LastLoginAt DATETIME,
	FailedLoginAttempts INT DEFAULT 0,
	CreatedAt DATETIME DEFAULT CURRENT_TIMESTAMP,
	UpdatedAt DATETIME ON UPDATE CURRENT_TIMESTAMP,
	FOREIGN KEY (RoleId) REFERENCES Roles(RoleId)
	
3.ExamTbl :
	ExamId INT AUTO_INCREMENT PRIMARY KEY,
	Title VARCHAR(200) NOT NULL,
	Description TEXT,
	DurationMinutes INT NOT NULL,
	TotalMarks INT,
	CreatedBy INT, -- Foreign Key from UserTable
	StartTime DATETIME, 
	EndTime DATETIME,  -- EndTime > StartTime
	IsPublished BOOLEAN DEFAULT FALSE, -- fisrt teacher exam ready kare after option ready then it's Become True
	CreatedAt DATETIME DEFAULT CURRENT_TIMESTAMP,
	FOREIGN KEY (CreatedBy) REFERENCES Users(UserId)


4.QuestionTbl :
	QuestionId INT AUTO_INCREMENT PRIMARY KEY,
	ExamId INT NOT NULL, -- Foreign Key From ExamTbl
	QuestionText TEXT NOT NULL, 
	Marks INT NOT NULL,
	QuestionType VARCHAR(20) DEFAULT 'MCQ',
	FOREIGN KEY (ExamId) REFERENCES Exams(ExamId) ON DELETE CASCADE


5.OptionTbl :
	OptionId INT AUTO_INCREMENT PRIMARY KEY,
	QuestionId INT NOT NULL, -- Foreign Key
	OptionText VARCHAR(255) NOT NULL,
	IsCorrect BOOLEAN DEFAULT FALSE,
	FOREIGN KEY (QuestionId) 
	REFERENCES Questions(QuestionId) ON DELETE CASCADE
	

6.ExamAssignTbl :
	AssignmentId INT AUTO_INCREMENT PRIMARY KEY,
	ExamId INT, -- Foreign Key
	StudentId INT, -- Foreign Key
	AssignedAt DATETIME DEFAULT CURRENT_TIMESTAMP,
	FOREIGN KEY (ExamId) REFERENCES Exams(ExamId) ON DELETE CASCADE,
	FOREIGN KEY (StudentId) REFERENCES Users(UserId)


7.StudentAttemptTbl :
	AttemptId INT AUTO_INCREMENT PRIMARY KEY,
	ExamId INT, -- Foreign Key
	StudentId INT, -- Foreign Key
	StartTime DATETIME,
	EndTime DATETIME,
	Score DECIMAL(5,2),
	IsSubmitted BOOLEAN DEFAULT FALSE,
	FOREIGN KEY (ExamId) REFERENCES Exams(ExamId),
	FOREIGN KEY (StudentId) REFERENCES Users(UserId)

8.StudentAnswerTbl :
	AnswerId INT AUTO_INCREMENT PRIMARY KEY,
	AttemptId INT, -- Foreign Key
	QuestionId INT, -- Foreign Key
	SelectedOptionId INT,
	MarksObtained DECIMAL(5,2),
	FOREIGN KEY (AttemptId) REFERENCES StudentAttempts(AttemptId) ON DELETE CASCADE,
	FOREIGN KEY (QuestionId) REFERENCES Questions(QuestionId),
	FOREIGN KEY (SelectedOptionId) REFERENCES Options(OptionId)
	
	
	
	
	 
